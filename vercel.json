{
  "version": 2,
  "name": "edu",
  "installCommand": "composer install --no-interaction --prefer-dist --optimize-autoloader && npm ci --no-audit --no-fund",
  "buildCommand": "npx vite build --config vite.config.mjs",
  "builds": [
    { "src": "api/index.php", "use": "vercel-php@0.6.0" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(css|js|img|favicon.ico|robots.txt)(/.*)?", "dest": "/public/$1$2" },
    { "src": "/.*", "dest": "/api/index.php" }
  ]
}
